<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
                android:background="@color/white"
    tools:context="com.buddy.mains.MainActivity">
    <FrameLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:gravity="center_horizontal"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/frame_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/frameMenu"
        android:layout_below="@+id/title">
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frame_line"
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:layout_above="@id/frameMenu">
        <ImageView
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1pt"
            android:background="@color/gray" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@color/white"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="20dp">

            <!-- 摄像头aaa -->

            <FrameLayout
                android:id="@+id/layout_aaa"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:id="@+id/image_aaa"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:background="@mipmap/aaa"
                    android:layout_gravity="center_horizontal"/>

            </FrameLayout>

            <!-- 统计bbb -->
            <FrameLayout
                android:id="@+id/layout_bbb"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/image_bbb"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_gravity="center_horizontal"
                    android:background="@mipmap/bbb" />

            </FrameLayout>

            <!-- 交互ccc -->
            <FrameLayout
                android:id="@+id/layout_ccc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/image_ccc"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_gravity="center_horizontal"
                    android:background="@mipmap/ccc" />

            </FrameLayout>

            <!-- 我的ddd -->

            <FrameLayout
                android:id="@+id/layout_ddd"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/image_ddd"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:paddingTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@mipmap/ddd"/>
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="35dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="主页"
                android:textSize="10dp"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="10dp"
                android:text="报告"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="10dp"
                android:text="配置"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="10dp"
                android:text="我的"/>

        </LinearLayout>

    </FrameLayout>


</RelativeLayout>
